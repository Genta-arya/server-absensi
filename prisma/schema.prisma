generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(uuid())
  nim             String     @unique
  name            String?
  email           String?    @unique
  password        String
  isLogin         Boolean    @default(false)
  token           String?
  avatar          String?    @default("https://cdn-icons-png.flaticon.com/512/3135/3135715.png")
  role            Role       @default(MHS)
  kegiatan        Kegiatan[] @relation("KegiatanMahasiswa")
  createdKegiatan Kegiatan[] @relation("KegiatanCreator")
}

model Kegiatan {
  id           String   @id @default(uuid())
  Kd_kegiatan  String   @unique
  nama         String
  deskripsi    String
  waktumulai   DateTime
  waktuselesai DateTime
  creatorId    String
  creator      User     @relation("KegiatanCreator", fields: [creatorId], references: [id])
  mahasiswa    User[]   @relation("KegiatanMahasiswa")
}

enum Role {
  MHS
  DOSEN
  ADMIN
}
